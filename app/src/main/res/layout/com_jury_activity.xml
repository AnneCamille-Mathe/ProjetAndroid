<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="293dp"
        android:layout_height="51dp"
        android:textSize="20sp"
        android:text="Choisissez le mode de création pour votre pseudo jury:"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="95dp" />

    <Button
        android:id="@+id/buttonAleatoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choix aléatoire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="150dp" />

    <Button
        android:id="@+id/buttonManuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choix manuel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAleatoire"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="156dp" />

</androidx.constraintlayout.widget.ConstraintLayout>